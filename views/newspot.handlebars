<h1>New Spot</h1>

<div id="map" style="width:50%;height:50%;"></div>
<form id="spot-form">
    <div class="form-group">
        <input type="text" class="form-control" id="title" placeholder="Title">
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="inputLongitude"></label>
            <input type="text" class="form-control" id="longitude" placeholder="Longitude">
        </div>
        <div class="form-group col">
            <label for="inputLatitude"></label>
            <input type="text" class="form-control" id="latitude" placeholder="Latitude">
        </div>
    </div>
    <div class="form-group">
        <input type="textarea" class="form-control" id="description" placeholder="Description">
    </div>
    <div class="form-group">
        <select class="selectpicker" title="Tags" id="tags" data-live-search="true" multiple>
            {{#each tags as |tag|}}
                <option value="{{tag.id}}">{{tag.tag_name}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<!-- bootstrap-select files -->
<!-- Required for tags dropdown -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
<script defer src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

<script src='/js/new-spot.js'></script>